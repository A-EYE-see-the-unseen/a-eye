<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    tools:context="com.dicoding.picodiploma.aeye.ui.detecting.DetectingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/detecting_screen">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimationView"
            android:layout_width="200dp"
            android:layout_height="200dp"

            app:flow_horizontalAlign="center"
            app:flow_verticalAlign="center"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/cctv_animation" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:text="@string/detecting"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textColor="@color/black"

            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/lottieAnimationView"
            app:layout_constraintStart_toStartOf="@+id/lottieAnimationView"
            app:layout_constraintTop_toBottomOf="@+id/lottieAnimationView" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBerhenti"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_berhenti"

            android:text="@string/berhenti"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_bold"

            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <Button
            android:id="@+id/btn_testing_newDetection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simulate new detection"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="@+id/btnBerhenti"
            app:layout_constraintStart_toStartOf="@+id/btnBerhenti"
            app:layout_constraintTop_toBottomOf="@+id/btnBerhenti" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detected_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Hello World"
            android:textSize="24sp"
            android:gravity="center"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>